@model PiggyBank.Web.Models.PaymentModel

<div class="popup" id="AddChildPopup">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Pay Child</h4>
            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Amount, new { @class = "control-label col-lg-3" })
                <div class="col-lg-9">
                    @Html.TextBoxFor(model => model.Amount, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Amount)
                </div>
            </div>
            @Html.HiddenFor(x => x.ChildId)
            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-9">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.PayIntoSavings)
                        @Html.LabelFor(m => m.PayIntoSavings)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-9">
                    <input type="submit" value="Pay" class="btn btn-default" /> <input type="button" value="Cancel" class="btn btn-warning" onclick="HidePopup()" />

                </div>
            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


    <script>
        function HidePopup() {
            $("#AddChildPopup").toggle();

        }
    </script>
</div>